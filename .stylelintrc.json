{
	"extends": "stylelint-config-standard",
	"rules": {
		"indentation": "tab",
		"declaration-colon-space-after": "always",
		"number-leading-zero": "never",
		"rule-empty-line-before": ["always", { "except": ["after-single-line-comment", "inside-block", "first-nested"] }],
		"no-descending-specificity": null,
		"declaration-empty-line-before": null,
		"selector-list-comma-newline-after": "never-multi-line",
		"unit-case": "lower",
		"at-rule-empty-line-before": ["always", { "except": ["inside-block", "first-nested", "blockless-after-blockless", "after-same-name"], "ignore": ["after-comment"] }]
	}
}
